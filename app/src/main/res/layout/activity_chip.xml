<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChipActivity">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cgAvisos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/chMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyChipStyle"
            android:text="@string/chipMensaje"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyChipStyle"
            android:text="@string/chipTelefono"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chVideoCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyChipStyle"
            android:text="@string/chipVideollamada"/>

    </com.google.android.material.chip.ChipGroup>
</LinearLayout>